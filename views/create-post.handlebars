<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
  <h2 class="title">Create a New Blog Post</h2><hr>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="Insert blog title here"/>
    </div>
    <div>
      <label for="post-content">Content:</label>
      <input class="textarea is-large has-fixed-size custom-textarea" rows="4" wrap="soft" id="post-content" name="post-content" placeholder="Insert blog content here"/>
    </div>
    <button type="submit" class="button is-primary is-pulled-right">Create Post</button>
  </form>
</section>
<script>
    $(document).ready(function() {
      // Automatically adjust textarea height on input
      $('textarea.custom-textarea').on('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
      });
    });
  </script>

<script src="/JavaScript/add-post.js"></script>